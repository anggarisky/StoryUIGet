<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleStory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:lineSpacingExtra="12dp"
        android:text="Start \nYour Own \nStory Today"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="52sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleStoryTwo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:lineSpacingExtra="12dp"
        android:text="Tell Us \nYourself"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="52sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitleStory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:lineSpacingExtra="8dp"
        android:text="Because procastinating is not the right choice"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStory" />

    <Button
        android:id="@+id/btnstory"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bgbtn"
        android:paddingBottom="34dp"
        android:text="New Story"
        android:textAllCaps="false"
        android:textColor="#1F5C5C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnstarted"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bgbtn"
        android:paddingBottom="34dp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="#1F5C5C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputStoryOne"
        android:text=""
        android:hint="Complete Name"
        android:inputType="text"
        android:textColorHint="#C7C7C7"
        android:textColor="#1E216C"
        android:textSize="20sp"
        android:paddingLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bginput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStoryTwo" />

    <EditText
        android:id="@+id/inputStoryTwo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bginput"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="14dp"
        android:text=""
        android:textColor="#1E216C"
        android:textColorHint="#C7C7C7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputStoryOne" />

    <EditText
        android:id="@+id/inputStoryThree"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bginput"
        android:hint="PIN Secure"
        android:inputType="number"
        android:paddingLeft="14dp"
        android:text=""
        android:textColor="#1E216C"
        android:textColorHint="#C7C7C7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputStoryTwo" />

</android.support.constraint.ConstraintLayout>